<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/rr_settings_title" >
         
    <PreferenceCategory
        android:title="@string/rr_cat_title">
        
         <PreferenceScreen
                android:id="@+id/status_bar_settings"
                android:title="@string/status_bar_title"
                android:fragment="com.android.settings.cyanogenmod.StatusBarSettings"
                android:icon="@drawable/ic_rrequalizer_tint"
                />   
         <PreferenceScreen
                android:id="@+id/rr_misc_settings"
                android:title="@string/misc_settings_title"
                android:fragment="com.android.settings.rr.MiscSettings"
                android:icon="@drawable/ic_rrutilities_tint"
                />
                
        <PreferenceScreen
                android:id="@+id/lock_settings"
                android:title="@string/rr_lockscreen_title"
                android:fragment="com.android.settings.rr.LockSettings"
                android:icon="@drawable/ic_rrlocked_tint"

                />
        <!-- Notification drawer -->
        <PreferenceScreen
                android:id="@+id/notification_drawer_settings"
                android:title="@string/notification_drawer_title"
                android:fragment="com.android.settings.cyanogenmod.NotificationDrawerSettings"
                android:icon="@drawable/ic_rrmagic_tint"
                />        
        <PreferenceScreen
                android:id="@+id/button_settings"
                android:title="@string/button_pref_title"
                android:fragment="com.android.settings.ButtonSettings"
                android:icon="@drawable/ic_buttons_tint"
                />
				
		<!-- CPU Settings for msm7x30 devices -->
		
		<PreferenceScreen

		android:title="@string/cpu_control" 
		android:key="cpu_control">
        <intent android:targetPackage="it.sineo.android.noFrillsCPUClassic" 
		android:action="android.intent.action.MAIN" 
		android:targetClass="it.sineo.android.noFrillsCPUClassic.activity.MainActivity"
		android:icon="@drawable/ic_rrphone"/>
		
		</PreferenceScreen>
		
		<PreferenceScreen
		
		android:title="@string/cpu_stats" 
		android:key="cpu_stats" >
        <intent android:targetPackage="com.bvalosek.cpuspy" 
		android:action="android.intent.action.MAIN" 
		android:targetClass="com.bvalosek.cpuspy.ui.HomeActivity"
		android:icon="@drawable/ic_rrphone"/>
		

		</PreferenceScreen>
